pkgname=libxxf86dga
pkgver=1.1.6
pkgrel=1
arch=('x86_64')
depends=('libx11')
makedepends=('util-macros' 'xorgproto' 'libx11' 'libxext')
source=(https://www.x.org/releases/individual/lib/libXxf86dga-$pkgver.tar.xz)

build() {
	cd libxxf86dga-$pkgver

	./configure --prefix=/usr --sysconfdir=/etc
}

package() {
	cd libxxf86dga-$pkgver

	make DESTDIR=$pkgdir install
}
