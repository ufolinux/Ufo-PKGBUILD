pkgname=gst-plugins-ugly
pkgver=1.22.3
pkgrel=1
arch=('x86_64')
depends=(
	# GStreamer family
	gstreamer gst-plugins-base

	# bad
	libcdio libx264 libx265)
makedepends=(valgrind bash-completion python3 mesa ninja bison)
source=(https://gstreamer.freedesktop.org/src/gst-plugins-ugly/gst-plugins-ugly-$pkgver.tar.xz)

prepare() {
	cd "${pkgname}-${pkgver}"

	mkdir -p build
}

build() {
	cd "${pkgname}-${pkgver}"/build

	meson \
	--wrap-mode=nofallback \
	--prefix=/usr \
	--buildtype=release	\
	-D package-origin=https://ufolinux.tk \
	-D gst-plugins-ugly:package-name="[GStreamer-UGLY]: $pkgver - UFOLINUX" \
	-D gst-plugins-ugly:package-origin=https://ufolinux.tk

	ninja
}

package() {
	cd "${pkgname}-${pkgver}"/build

	DESTDIR=$pkgdir ninja install
}
