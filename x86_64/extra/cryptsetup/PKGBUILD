pkgname=cryptsetup
pkgver=2.6.1
pkgrel=1
arch=('x86_64')
depends=(popt lvm2 json-c openssl util-linux)
makedepends=(gcc)
source=(https://www.kernel.org/pub/linux/utils/cryptsetup/v2.6/cryptsetup-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	./configure	\
	--prefix=/usr	\
	--disable-ssh-token \
	--disable-asciidoc

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
