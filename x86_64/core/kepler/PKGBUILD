pkgname=kepler
pkgver=2023.1
pkgrel=1
arch=('x86_64')
depends=(zstd bash glibc libarchive curl gpgme libassuan debugedit)
commitid=0d9daf3f35cfbba0e5d50538189e983bb6666480
replaces=(pacman)
source=(git+https://github.com/ufolinux/kepler#commit=$commitid)

build() {
	cd $pkgname

	meson \
	--prefix=/usr \
	-D doxygen=enabled \
	-D scriptlet-shell=/bin/bash \
	-D ldconfig=/usr/bin/ldconfig \
	build

	ninja -C build
}

package() {
	cd $pkgname
	
	mkdir -vp $pkgdir
	export DESTDIR=$pkgdir/
	
	ninja -C build install

	# copy our own kepler.conf that has proper server list
	cp -f ../../kepler.conf $pkgdir/etc/kepler.conf
	mkdir -p $pkgdir/etc/kepler.d
	touch $pkgdir/etc/kepler.d/mirrorlist
}
